@using RssApp.Contracts
@using RssApp.RssClient
@using WasmApp.Services
@inject ILogger<PageBase> logger

@code {
    public RssUser CurrentUser { get; set; }

    [Inject]
    protected IFeedClient feedClient { get; set; }

    [Inject]
    private IUserClient userClient { get; set; }

    protected async Task GetUsernameAsync()
    {
        if (this.CurrentUser == null)
        {
            this.CurrentUser = await this.userClient.GetFeedUserAsync();
            StateHasChanged();
        }
    }
}
