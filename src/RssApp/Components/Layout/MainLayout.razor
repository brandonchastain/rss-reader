@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<div class="page">

    <main>
        <div class="top-row px-4">
            <NavLink class="nav-link" href="/timeline">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Timeline
            </NavLink>
            <NavLink class="nav-link" href="/">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Feeds
            </NavLink>
            <AuthorizeView>
                <Authorized>
                    <a href="MicrosoftIdentity/Account/SignOut" class="ml-auto">Sign out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="MicrosoftIdentity/Account/SignIn" class="ml-auto">Sign in</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <AuthorizeView>
            <Authorized>
                <article class="content px-4">
                    @Body
                </article>
            </Authorized>
        </AuthorizeView>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
